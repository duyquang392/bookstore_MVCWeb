<div class="row">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên Sách</th>
                    <th>Giá</th>
                    <th>Số lượng sách</th>
                    <th>Tổng tiền</th>
                </tr>
            </thead>
            <tbody>

                @for (int i = 0; i < Model.ModelOrderDetail.Count; i++) 
                { 
                    <tr id="row_@i">
                        <td>@(i+1)</td>
                        <td><a href="/Admin/Product/Details/@Model.ModelProduct[i].ID">@Model.ModelProduct[i].Name</a></td>
                        <td>@Model.ModelOrderDetail[i].Price</td>
                        <td>@Model.ModelOrderDetail[i].Quantity</td>
                        <td>@(Model.ModelOrderDetail[i].Quantity * Model.ModelOrderDetail[i].Price)</td>

                    </tr>
                }
            </tbody>
        </table>
       
    </div>
